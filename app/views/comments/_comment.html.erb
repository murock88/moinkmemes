<div class="media">
    <div class="pull-left">
        
        <%= comment.user.username %>
       
    </div>
    <div class="media-body">
        <p class="media-heading pull-right">
          <%= time_ago_in_words(comment.created_at) %>
        </p><br />
        <%= comment.body %>
       
    </div>
</div>

<% if can? :update, @comment %> 
<%= link_to "Edit", edit_meme_comment_path(comment.meme, comment) %>
<% end %>
<% if can? :destroy, @comment%> 
<%= link_to "Delete", [comment.meme, comment], method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>